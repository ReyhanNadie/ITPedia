<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Score"
    android:background="#2F58CD">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C O N G R A T U L A T I O N"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:id="@+id/congratulationsIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="130dp"
        android:adjustViewBounds="true"
        android:src="@drawable/winner"/>
    <TextView
        android:id="@+id/succes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_below = "@+id/congratulationsIcon"
        android:text="You've succesfully completed a quiz"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_below="@+id/succes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tvSkorAkhir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Score : 0"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="HOME"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/round_back_green20"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>

</RelativeLayout>